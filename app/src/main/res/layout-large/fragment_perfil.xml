<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AprendaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".activities.Home">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/voltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@android:color/transparent"
                    android:theme="@style/Base.Theme.EducaEco"
                    app:srcCompat="@drawable/btn_voltar" />

                <TextView
                    android:id="@+id/pagName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:fontFamily="@font/righteous"
                    android:text="Perfil"
                    android:textColor="#6D6D6D"
                    android:textSize="32sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="515dp"
                android:layout_gravity="center"
                android:background="@drawable/fundo_perfil">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="280dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/alunoText"
                    app:layout_constraintVertical_bias="0.715">

                    <TextView
                        android:id="@+id/emailAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/righteous"
                        android:text="Email: murilo.moreira@gats.com"
                        android:textColor="#406A2D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/turmaAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/righteous"
                        android:text="Turma: 6 ano A"
                        android:textColor="#406A2D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/professorAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/righteous"
                        android:text="Professor: Raissa Marconato"
                        android:textColor="#406A2D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/escolaAluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/righteous"
                        android:text="Escola: Instituto J&amp;F"
                        android:textColor="#406A2D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ajudaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/righteous"
                        android:text="Precisa de Ajuda?"
                        android:textColor="#406A2D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/suporteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/righteous"
                        android:text="Suporte ao Aluno:"
                        android:textColor="#406A2D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/telText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="70dp"
                        android:fontFamily="@font/righteous"
                        android:text="(11) 94445-9065"
                        android:textColor="#406A2D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/logoutAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/righteous"
                        android:text="Sair do Aplicativo"
                        android:textColor="#7BA856"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/icon_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_perfil"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nomeAluno"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/righteous"
                    android:text="Murilo de Oliveira Moreira"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_perfil" />

                <TextView
                    android:id="@+id/alunoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/righteous"
                    android:text="Aluno"
                    android:textColor="#CEF1B1"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nomeAluno" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>