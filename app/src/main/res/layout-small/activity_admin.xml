<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/areaRestritaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/righteous"
            android:text="Área Restrita"
            android:textColor="#000000"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/logo_educaeco" />

        <Button
            android:id="@+id/btnForms"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_verde"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:text="Formulário"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.EducaEco2.BtnGreen" />

        <Button
            android:id="@+id/btnResultados"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_verde"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:text="Análise"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.EducaEco2.BtnGreen" />

        <Button
            android:id="@+id/btnDashBoard"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_verde"
            android:fontFamily="@font/righteous"
            android:gravity="center"
            android:text="DashBoard"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:theme="@style/ThemeOverlay.EducaEco2.BtnGreen" />

        <TextView
            android:id="@+id/logoutAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/righteous"
            android:text="Sair do Aplicativo"
            android:textColor="#7BA856"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>